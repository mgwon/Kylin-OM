{
  "panel_title": "Disk Ops Discards / Flush",
  "panel_id": 301,
  "description": "Per-second rate of discard (TRIM) and flush (write cache) operations. Useful for monitoring low-level disk activity on SSDs and advanced storage",
  "targets": [
    {
      "refId": "A",
      "query": "irate(node_disk_discards_completed_total{instance=\"localhost:9100\",job=\"node_exporter\"}[5m])",
      "legendFormat": "{{device}} - Discards completed",
      "hidden": false,
      "result": {
        "status": "success",
        "data": {
          "resultType": "matrix",
          "result": []
        }
      }
    },
    {
      "refId": "B",
      "query": "irate(node_disk_discards_merged_total{instance=\"localhost:9100\",job=\"node_exporter\"}[5m])",
      "legendFormat": "{{device}} - Discards merged",
      "hidden": false,
      "result": {
        "status": "success",
        "data": {
          "resultType": "matrix",
          "result": []
        }
      }
    },
    {
      "refId": "C",
      "query": "irate(node_disk_flush_requests_total{instance=\"localhost:9100\",job=\"node_exporter\"}[5m])",
      "legendFormat": "{{device}} - Flush",
      "hidden": false,
      "result": {
        "status": "success",
        "data": {
          "resultType": "matrix",
          "result": []
        }
      }
    }
  ]
}